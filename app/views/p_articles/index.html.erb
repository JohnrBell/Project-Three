<h2>Pending Articles Landing Page</h2>
<a href='/articles'>Go To Articles Page</a>
<hr>

<table>
<tr>
<td width=50% valign=top>
<h3>Pending Articles</h3>

			
			<button id='getredditposts'>Poll Reddit for New Top Posts...</button> <br>
			<select id='timeframe'>
				<option>Day</option>
				<option>Week</option>
				<option>Month</option>
				<option>Year</option>
			</select>

<br>		
<br>
<% pending.each do |article| %>
<span>
	
	<img src="<%= article.img_url %>" width="300"><br>
	<%= article.title %><br>
	<input type="hidden" name='title' value='<%= article.title %>'>
	<input type="hidden" name='img_url' value='<%= article.img_url %>'>

	<button id="yes" data-pic-id="<%= article.id %>">Yup.</button> 
	<button id="kill" data-pic-id="<%= article.id %>">Nope.</button>
	<br><br>
</span>
<% end %>
</td>
<td width=50% valign=top>
<h3>Accepted Articles</h3>
<div id='acceptedArticles'>
	<% accepted_articles.each do |accepted_article| %>
	<span>
		<img src="<%= accepted_article.img_url %>" width='300'><br>
		<%= accepted_article.title %>
		<input type="hidden" name='title' value='<%= accepted_article.title %>'>
		<input type="hidden" name='img_url' value='<%= accepted_article.img_url %>'>
<br>
		<button id="killDuplicate" data-pic-id="<%= accepted_article.id %>">Nope.</button>

		<br><br>
	</span>
	<% end %>
</div>
</td>
</tr>
</table>

<div id='loading' style="display: none">
<center>
	<div class="wrap clearfix">
	  <section class="clearfix">
	    <ul class="rotate_wrapper">
	      <li class="rotate_item"><span></span></li>
	      <li class="rotate_item delay1"><span></span></li>
	      <li class="rotate_item delay2"><span></span></li>
	      <li class="rotate_item delay3"><span></span></li>
	      <li class="rotate_item delay4"><span></span></li>
	    </ul>
	  </section>
	</div>
	Loading...
</center>
</div>



<div id="header">
<table width=100% height=100%>
	<tr>
		<td width=20 align="right">
		</td>
		<td width=50%>
			Welcome to <a href='/articles'>SpaceGrid</a>, <%= session[:user_name] %>
		</td>
		<td width=0% align="right">
			<form action='/sessions/destroy' method="POST">
			<button id="logout">Log Out</button>
			<input name='authenticity_token' value='<%=form_authenticity_token() %>' type='hidden'>
			</form>
		</td>
		<td width=20 align="right">
		</td>
	</tr>
</table>
</div>


<div id="container" class="js-masonry">
	<% @articles.each do |article| %>
		<div id='artimg'>
			<a class='imglink' href='/articles/<%= article.id %>' original-title="<%= article.title %>">
				<img src="<%= article.img_url %>" width="350px">
			</a>
		</div>
	<% end %>
</div>

<div id='loading'>
<center>
	<div class="wrap clearfix">
	  <section class="clearfix">
	    <ul class="rotate_wrapper">
	      <li class="rotate_item"><span></span></li>
	      <li class="rotate_item delay1"><span></span></li>
	      <li class="rotate_item delay2"><span></span></li>
	      <li class="rotate_item delay3"><span></span></li>
	      <li class="rotate_item delay4"><span></span></li>
	    </ul>
	  </section>
	</div>
	Loading...
</center>
</div>


<script type="text/javascript">
	var container = document.querySelector('#container');
	var msnry;
	imagesLoaded( container, function() {
		$('#loading').remove()
	  msnry = new Masonry( container );
		$('.imglink').tipsy({gravity: 's'});
	});
</script>

